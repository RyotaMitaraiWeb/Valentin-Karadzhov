---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
}

const { class: className, ...props } = Astro.props;
---

<a {...props} class:list={["flex w-max items-center gap-2 hover:underline active:opacity-65 focus-outline", className]}>
  <slot name="icon" />
  <span>
    <slot />
  </span>
</a>
