---
import PageTitle from "../../components/content/PageTitle.astro";
import SiteBackgroundSection from "../../components/content/sections/SiteBackgroundSection.astro";
import Text from "../../components/content/Text.astro";
import PortfolioOverviewProjectCard from "../../components/portfolio/PortfolioOverviewProjectCard.astro";
import Layout from "../../layouts/Layout.astro";
import { webApps } from "../../common/portfolio";
import Heading2 from "../../components/content/Heading2.astro";
---

<Layout
  pageTitle="Portfolio | Valentin Karadzhov"
  metaDescription="Overview of my personal and professional projects. Check each link for more information"
>
  <SiteBackgroundSection selector="section">
    <PageTitle>Portfolio</PageTitle>
    <Text
      >This is an overview of some of the projects I have worked on. The list
      includes a short description of the project, the tech stack used, and
      useful external links (such as links to their GitHub repositories). Each
      project has its own dedicated page with more information, which you can
      access from the list</Text
    >
  </SiteBackgroundSection>

  <section class="p-8 flex flex-col gap-8">
    <Heading2 class="text-center">Featured web applications</Heading2>
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-x-16 gap-y-32 lg:gap-8">
      {
        webApps.map((app) => (
          <PortfolioOverviewProjectCard
            title={app.title}
            techStack={app.techStack}
            image={app.banner}
            imageAlt={app.bannerAlt}
            externalLinks={app.externalLinks}
            id={app.id}
          >
            <Text>{app.description}</Text>
          </PortfolioOverviewProjectCard>
        ))
      }
    </div>
  </SiteBackgroundSection>
</Layout>
